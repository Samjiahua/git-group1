<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/act1_tv_carid"
        android:text="1"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/act1_tv_carbarnd"
        android:src="@mipmap/baoma"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_marginLeft="100dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/act1_tv_pname"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000"
            android:text="斯大林木卡姆是"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/act1_tv_carnumber"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000"
            android:text="斯大林木卡姆是"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <TextView
        android:text="余额:"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/act1_tv_balance"
        android:text="0元"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <CheckBox
        android:id="@+id/act1_cb"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/act1_btn_cz"
        android:text="充值"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>
