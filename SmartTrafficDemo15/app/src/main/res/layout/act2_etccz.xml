<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#2db2ff"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/act2_iv_back1"
            android:background="@mipmap/back"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="ETC充值"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="车辆编号:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="200dp"
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/act2_et_carid1"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:hint="1-3"
            android:inputType="number"
            android:layout_width="400dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="车  牌  号:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="200dp"
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/act2_tv_carnumber1"
            android:textSize="35sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="充值金额:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="200dp"
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/act2_btn_10"
            android:text="10元"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/act2_btn_50"
            android:text="50元"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/act2_btn_100"
            android:text="100元"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/act2_et_money1"
            android:textSize="30sp"
            android:layout_marginLeft="390dp"
            android:hint="1-999"
            android:inputType="number"
            android:layout_width="400dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="元"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="35sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    
    <Button
        android:id="@+id/act2_btn_cz1"
        android:text="充值"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />


</LinearLayout>